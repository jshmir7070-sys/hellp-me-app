# ====================================
# Hellp Me 환경 변수 설정
# ====================================

# 공통 (필수)
APP_ENV=dev                        # dev | stage | prod
DATABASE_URL=postgresql://...      # PostgreSQL 연결 URL
JWT_SECRET=your-jwt-secret-key     # JWT 시크릿 키 (32자 이상)
SESSION_SECRET=your-session-secret # 세션 시크릿
BASE_URL=http://localhost:5000     # 서버 기본 URL

# ====================================
# 외부 연동 스위치 (mock | real)
# ====================================
# mock: 연동 없이 운영 가능 (수동 처리 모드)
# real: 실제 외부 서비스 연동

SMS_PROVIDER=mock                  # SMS 발송 (Solapi)
PUSH_PROVIDER=mock                 # 푸시 알림 (FCM/Web Push)
PAYMENT_PROVIDER=mock              # 결제 (PG사)
IDENTITY_PROVIDER=mock             # 본인인증 (PortOne 등)

# ====================================
# SMS 연동 (SMS_PROVIDER=real 시 필수)
# ====================================
SOLAPI_API_KEY=
SOLAPI_API_SECRET=
SOLAPI_SENDER_ID=

# ====================================
# 푸시 알림 연동 (PUSH_PROVIDER=real 시 필수)
# ====================================
FIREBASE_SERVICE_ACCOUNT_KEY=      # FCM 서버 키 (JSON)
VAPID_PUBLIC_KEY=                  # Web Push VAPID 공개키
VAPID_PRIVATE_KEY=                 # Web Push VAPID 비밀키

# ====================================
# 결제 연동 (PAYMENT_PROVIDER=real 시 필수)
# ====================================
PG_API_KEY=                        # PG사 API 키
PG_WEBHOOK_SECRET=                 # PG 웹훅 시크릿

# ====================================
# 본인인증 연동 (IDENTITY_PROVIDER=real 시 필수)
# ====================================
PORTONE_API_KEY=                   # PortOne API 키
# 또는
KG_API_KEY=                        # KG이니시스 API 키

# ====================================
# 소셜 로그인 (선택)
# ====================================
KAKAO_REST_API_KEY=                # 카카오 REST API 키
NAVER_CLIENT_ID=                   # 네이버 클라이언트 ID
NAVER_CLIENT_SECRET=               # 네이버 클라이언트 시크릿
OAUTH_BASE_URL=                    # OAuth 콜백 기본 URL

# ====================================
# 파일 스토리지 (선택)
# ====================================
FILE_STORAGE=local                 # local | s3
# S3 사용 시
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=

# ====================================
# 개발/스테이징 전용
# ====================================
# NODE_ENV=development
# DEBUG=true
